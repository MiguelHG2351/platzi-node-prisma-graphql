{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2021",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "module": "commonjs",
    "types": ["node"],

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  
  "exclude": ["**/*.spec.ts"],
  "include": ["**/*.ts"]
}
